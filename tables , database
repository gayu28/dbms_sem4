CREATE DATABASE pythonlogin ;


CREATE TABLE accounts(
	id int(11) NOT NULL AUTO_INCREMENT,
  	username varchar(50) NOT NULL,
  	password varchar(255) NOT NULL,
  	email varchar(100) NOT NULL,
    PRIMARY KEY (id)
) ;

Create table regf (
	f_id int(3) AUTO_INCREMENT,
	username varchar(20),	
	password varchar(20),
	email varchar(20),
	type varchar(20),
	locality varchar(20),
	primary key ( f_id ) );  // farmer (reg)


Create table regs (
	c_id int(3) AUTO_INCREMENT,
	username varchar(20),	
	password varchar(20),
	email varchar(20),
	address varchar(20),
	primary key ( c_id ) );  // customer (reg2)

Create table regg  (
	g_id int(3) AUTO_INCREMENT,
	username varchar(20),	
	password varchar(20),
	email varchar(20),
	post varchar(20),
	primary key ( g_id ) ); //govt (reg3)
